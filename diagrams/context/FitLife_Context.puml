@startuml
title FitLife Context Diagram

!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

top to bottom direction

Person(user, "User", "A user of the fitness club system")
Person(admin, "Administrator", "An administrator managing the system")
System_Boundary(FitLifeSystem, "FitLife System") {
    System(fitlife_core, "Core System", "Manages memberships, schedules, and payments")
}

System_Ext(api, "Third-Party API", "External API for fitness data integration")
System_Ext(bank, "Bank System", "External bank for processing payments")

Rel(user, fitlife_core, "Uses", "HTTPS")
Rel(admin, fitlife_core, "Manages", "HTTPS")
Rel(fitlife_core, api, "Fetches fitness data", "API")
Rel(fitlife_core, bank, "Processes payments", "HTTPS")

@enduml
